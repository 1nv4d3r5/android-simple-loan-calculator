<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <ScrollView android:id="@+id/mainScrollView"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
        <LinearLayout android:orientation="vertical"
                      android:layout_width="match_parent"
                      android:layout_height="match_parent" android:padding="15dp">
            <TextView android:text="@string/amount"
                      android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      style="@style/Result.Label"/>
            <TextView android:id="@+id/resultAmountText"
                      android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      android:text="0.00"
                      style="@style/Result.Value"/>

            <View android:layout_width="fill_parent" android:layout_height="1dp"
                  android:background="@color/Separator.Color"/>
            <TextView android:text="@string/MonthlyAmountLbl"
                      android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      style="@style/Result.Label"/>
            <TextView android:id="@+id/resultMonthlyPaymentText"
                      android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      android:text="0.00"
                      style="@style/Result.Value"/>

            <View android:layout_width="fill_parent" android:layout_height="1dp"
                  android:background="@color/Separator.Color"/>

            <TextView android:text="@string/IterestTotalLbl"
                      android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      style="@style/Result.Label"/>
            <TextView android:id="@+id/resultIterestTotalText"
                      android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      android:text="0.00"
                      style="@style/Result.Value"/>

            <View android:layout_width="fill_parent" android:layout_height="1dp"
                  android:background="@color/Separator.Color"/>

            <LinearLayout android:id="@+id/resultDownPaymentGroupView"
                          android:layout_width="fill_parent"
                          android:layout_height="wrap_content"
                          android:orientation="vertical">

                <TextView android:text="@string/donPaymentTotalLabel"
                          android:layout_width="fill_parent"
                          android:layout_height="wrap_content"
                          style="@style/Result.Label"/>
                <TextView android:id="@+id/resultDownPaymentTotalText"
                          android:layout_width="fill_parent"
                          android:layout_height="wrap_content"
                          android:text="0.00"
                          style="@style/Result.Value"/>
                <View android:layout_width="fill_parent" android:layout_height="1dp"
                      android:background="@color/Separator.Color"/>
            </LinearLayout>

            <LinearLayout android:id="@+id/resultCommissionsGroupView"
                          android:layout_width="fill_parent"
                          android:layout_height="wrap_content"
                          android:orientation="vertical">

                <TextView android:text="@string/commissionTotalLabel"
                          android:layout_width="fill_parent"
                          android:layout_height="wrap_content"

                          style="@style/Result.Label"/>
                <TextView android:id="@+id/resultCommissionsTotalText"
                          android:layout_width="fill_parent"
                          android:layout_height="wrap_content"
                          android:text="0.00"
                          style="@style/Result.Value"/>
                <View android:layout_width="fill_parent" android:layout_height="1dp"
                      android:background="@color/Separator.Color"/>
            </LinearLayout>

            <TextView android:text="@string/effectiveInterestLbl"
                      android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      style="@style/Result.Label"/>
            <TextView android:id="@+id/effectiveInterestText"
                      android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      android:text="0.00"
                      style="@style/Result.Value"/>
            <View android:layout_width="fill_parent" android:layout_height="1dp"
                  android:background="@color/Separator.Color"/>

            <TextView android:text="@string/AmountTotalLbl"
                      android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      style="@style/Result.Label"/>
            <TextView android:id="@+id/resultAmountTotalText"
                      android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      android:text="0.00"
                      style="@style/Result.Value"/>
            <View android:layout_width="fill_parent" android:layout_height="1dp"
                  android:background="@color/Separator.Color"/>

            <TextView android:text="@string/paymentsCount"
                      android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      style="@style/Result.Label"/>
            <TextView android:id="@+id/resultPeriodTotalText"
                      android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      android:text="0.00"
                      style="@style/Result.Value"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>

