<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <TextView android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:text="@string/downPayment"
              android:textStyle="normal" style="@android:style/TextAppearance.DeviceDefault.Large"/>
    <TextView android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:text="@string/downPaymentHint"
              android:textStyle="italic"/>

    <TableLayout android:layout_width="fill_parent"
                 android:layout_height="wrap_content"
                 android:stretchColumns="0">
        <TableRow android:layout_width="fill_parent">
            <EditText android:id="@+id/downPaymentEdit"
                      android:layout_width="fill_parent"
                      android:layout_height="wrap_content"

                      android:inputType="phone"
                      android:hint="@string/valuePercentHint"/>
            <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/spinner"/>

        </TableRow>
    </TableLayout>

    <TextView android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:text="@string/disposableCommission"
              android:textStyle="normal" style="@android:style/TextAppearance.DeviceDefault.Large"/>
    <TextView android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:text="@string/disposableCommissionHint"
              android:textStyle="italic"/>
    <TableLayout android:layout_width="fill_parent"
                 android:layout_height="wrap_content"
                 android:stretchColumns="0">
        <TableRow android:layout_width="fill_parent">
            <EditText android:id="@+id/disposableCommissionEdit"
                      android:layout_width="fill_parent"
                      android:layout_height="wrap_content"

                      android:inputType="phone"
                      android:hint="@string/valuePercentHint"/>
            <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/spinner1"/>

        </TableRow>
    </TableLayout>

    <TextView android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:text="@string/monthlyCommission"
              android:textStyle="normal" style="@android:style/TextAppearance.DeviceDefault.Large"/>
    <TextView android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:text="@string/monthlyCommissionHint"
              android:textStyle="italic"/>
    <TableLayout android:layout_width="fill_parent"
                 android:layout_height="wrap_content"
                 android:stretchColumns="0">
        <TableRow android:layout_width="fill_parent">
            <EditText android:id="@+id/monthlyCommissionEdit"
                      android:layout_width="fill_parent"
                      android:layout_height="wrap_content"

                      android:inputType="phone"
                      android:hint="@string/valuePercentHint"/>
            <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/spinner2"/>

        </TableRow>
    </TableLayout>

    <TextView android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:text="@string/residue"
              android:textStyle="normal" style="@android:style/TextAppearance.DeviceDefault.Large"/>
    <TextView android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:text="@string/residueHint"
              android:textStyle="italic"/>
    <TableLayout android:layout_width="fill_parent"
                 android:layout_height="wrap_content"
                 android:stretchColumns="0">
        <TableRow android:layout_width="fill_parent">
            <EditText android:id="@+id/residueEdit"
                      android:layout_width="fill_parent"
                      android:layout_height="wrap_content"

                      android:inputType="phone"
                      android:hint="@string/valuePercentHint"/>
            <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/spinner3"/>

        </TableRow>
    </TableLayout>
</LinearLayout>
