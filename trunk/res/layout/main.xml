<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical" android:layout_width="fill_parent"
              android:layout_height="fill_parent" android:background="@drawable/background">
    <ScrollView android:id="@+id/mainScrollView"
                android:layout_width="fill_parent" android:layout_height="wrap_content">
        <LinearLayout android:orientation="vertical"
                      android:layout_width="fill_parent" android:layout_height="fill_parent" android:padding="5px">
            <TextView android:layout_width="fill_parent"
                      android:layout_height="wrap_content" android:text="@string/type"/>
            <TableLayout android:layout_width="fill_parent"
                         android:layout_height="wrap_content" android:stretchColumns="0">
                <TableRow android:layout_width="fill_parent">
                    <Spinner android:id="@+id/loanTypeSpinner" android:layout_width="fill_parent"
                             android:layout_height="wrap_content" android:entries="@array/types">
                    </Spinner>
                    <Button android:id="@+id/loanTypeHelpButton" android:text=""
                            android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                </TableRow>
            </TableLayout>

            <TextView android:layout_width="fill_parent"
                      android:layout_height="wrap_content" android:text="@string/amount"/>

            <EditText android:id="@+id/amountEdit" android:layout_width="fill_parent"
                      android:layout_height="wrap_content" android:numeric="decimal" android:inputType="phone"
                      android:hint="@string/amountHint"/>


            <TextView android:text="@string/interest"
                      android:layout_width="fill_parent" android:layout_height="wrap_content"/>
            <EditText android:id="@+id/interestEdit" android:layout_width="fill_parent"
                      android:layout_height="wrap_content" android:numeric="decimal" android:inputType="phone"
                      android:hint="@string/interestHint"/>

            <TextView android:id="@+id/periodLabel" android:text="@string/period"
                      android:layout_width="fill_parent" android:layout_height="wrap_content"/>


            <TableLayout android:id="@+id/periodLayout" android:layout_span="2" android:stretchColumns="*"
                         android:layout_width="wrap_content" android:layout_height="wrap_content"
                         android:background="@layout/periodblock">
                <TableRow>
                    <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content"
                                  android:orientation="vertical">
                        <TextView  android:text="@string/periodTypeYear" android:gravity="center"
                                  android:layout_width="fill_parent" android:layout_height="wrap_content"
                                  android:textColor="@color/result"/>
                        <TableLayout android:layout_span="5" android:stretchColumns="*"
                                     android:layout_width="wrap_content" android:layout_height="wrap_content">
                            <TableRow>
                                <Button android:id="@+id/periodYearMinusButton" android:text="  -  " android:textStyle="bold"
                                        android:layout_width="fill_parent" android:layout_height="wrap_content"
                                        android:layout_marginRight="-3dip"/>
                                <EditText android:id="@+id/periodYearEdit" android:text="0"
                                          android:layout_width="fill_parent" android:layout_height="wrap_content"
                                          android:numeric="decimal" android:inputType="phone"
                                          android:layout_marginRight="-3dip" android:layout_marginLeft="-3dip"/>
                                <Button android:id="@+id/periodYearPlusButton" android:text="  +  " android:textStyle="bold"
                                        android:layout_width="fill_parent" android:layout_height="wrap_content"
                                        android:layout_marginLeft="-3dip"/>
                            </TableRow>
                        </TableLayout>
                    </LinearLayout>
                    <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content"
                                  android:orientation="vertical">
                        <TextView android:text="@string/periodTypeMonth"  android:gravity="center"
                                  android:layout_width="fill_parent" android:layout_height="wrap_content"
                                  android:textColor="@color/result"/>
                        <TableLayout android:layout_span="5" android:stretchColumns="*"
                                     android:layout_width="wrap_content" android:layout_height="wrap_content">
                            <TableRow>
                                <Button android:id="@+id/periodMonthMinusButton" android:text="  -  " android:textStyle="bold"
                                        android:layout_width="fill_parent" android:layout_height="wrap_content"
                                        android:layout_marginRight="-3dip"/>
                                <EditText android:id="@+id/periodMonthEdit" android:text="0"
                                          android:layout_width="fill_parent" android:layout_height="wrap_content"
                                          android:numeric="decimal" android:inputType="phone"
                                          android:layout_marginRight="-3dip" android:layout_marginLeft="-3dip"/>
                                <Button android:id="@+id/periodMonthPlusButton" android:text="  +  " android:textStyle="bold"
                                        android:layout_width="fill_parent" android:layout_height="wrap_content"
                                        android:layout_marginLeft="-3dip"/>
                            </TableRow>
                        </TableLayout>
                    </LinearLayout>
                </TableRow>
            </TableLayout>

            <View android:layout_width="fill_parent" android:layout_height="7dip"></View>
            <TextView android:id="@+id/fixedPaymentLabel"
                      android:text="@string/fixedPayment" android:visibility="gone"
                      android:layout_width="fill_parent" android:layout_height="wrap_content"/>
            <EditText android:id="@+id/fixedPaymentEdit" android:layout_width="fill_parent"
                      android:layout_height="wrap_content" android:visibility="gone" android:numeric="decimal"
                      android:inputType="phone"/>

            <TableLayout android:layout_span="5" android:stretchColumns="*" android:layout_width="wrap_content"
                         android:layout_height="wrap_content">
                <TableRow>
                    <Button android:id="@+id/calculateButton" android:text="@string/calc"
                            android:textStyle="bold" android:layout_width="fill_parent"
                            android:layout_height="wrap_content"/>
                    <Button android:text="@string/schedule" android:id="@+id/scheduleButton" android:enabled="false"
                            android:layout_width="fill_parent" android:layout_height="wrap_content"/>
                </TableRow>
            </TableLayout>


            <LinearLayout android:id="@+id/resultContainer"
                          android:layout_width="fill_parent" android:layout_height="wrap_content"
                          android:orientation="vertical" android:background="@layout/roundedshape"
                          android:padding="5px" android:layout_margin="3px">

                <TextView android:text="@string/MonthlyAmountLbl"
                          android:layout_width="fill_parent" android:layout_height="wrap_content"
                          android:textColor="@color/text"/>
                <TextView android:id="@+id/resultMonthlyPaymentText"
                          android:layout_width="fill_parent" android:layout_height="wrap_content"
                          android:textStyle="bold" android:text="0.0" android:gravity="right"
                          android:textSize="20px" android:paddingRight="10px" android:paddingBottom="5px"
                          android:textColor="@color/result"/>

                <View android:layout_width="fill_parent" android:layout_height="1dip"
                      android:background="@color/border"/>

                <TextView android:text="@string/IterestTotalLbl" android:textColor="@color/text"
                          android:layout_width="fill_parent" android:layout_height="wrap_content"/>
                <TextView android:id="@+id/resultIterestTotalText"
                          android:layout_width="fill_parent" android:layout_height="wrap_content"
                          android:textStyle="bold" android:text="0.0" android:gravity="right"
                          android:textSize="20px" android:paddingRight="10px" android:paddingBottom="5px"
                          android:textColor="@color/result"/>

                <View android:layout_width="fill_parent" android:layout_height="1dip"
                      android:background="@color/border"/>

                <TextView android:text="@string/AmountTotalLbl" android:textColor="@color/text"
                          android:layout_width="fill_parent" android:layout_height="wrap_content"/>
                <TextView android:id="@+id/resultAmountTotalText"
                          android:layout_width="fill_parent" android:layout_height="wrap_content"
                          android:textStyle="bold" android:text="0.0" android:gravity="right"
                          android:textSize="20px" android:paddingRight="10px" android:paddingBottom="5px"
                          android:textColor="@color/result"/>

                <View android:layout_width="fill_parent" android:layout_height="1dip"
                      android:background="@color/border"/>

                <TextView android:text="@string/paymentsCount" android:textColor="@color/text"
                          android:layout_width="fill_parent" android:layout_height="wrap_content"/>
                <TextView android:id="@+id/resultPeriodTotalText"
                          android:layout_width="fill_parent" android:layout_height="wrap_content"
                          android:textStyle="bold" android:text="0" android:gravity="right"
                          android:textSize="20px" android:paddingRight="10px"
                          android:textColor="@color/result"/>
            </LinearLayout>
            <TextView android:layout_width="fill_parent" android:layout_height="wrap_content"
                      android:textColor="@color/result" android:textSize="12sp" android:text="by Andrei Samkov"
                      android:gravity="right" android:paddingRight="7dp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
