<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical" android:layout_width="fill_parent"
              android:layout_height="fill_parent">
	<ScrollView android:id="@+id/ScrollView"
              android:layout_width="fill_parent" android:layout_height="wrap_content">
		<LinearLayout android:orientation="vertical"
                  android:layout_width="fill_parent" android:layout_height="fill_parent">
			<TextView android:layout_width="fill_parent"
                android:layout_height="wrap_content" android:text="@string/type" />
			<Spinner android:id="@+id/Type" android:layout_width="fill_parent"
               android:layout_height="wrap_content" android:entries="@array/types">

			</Spinner>
			<TextView android:layout_width="fill_parent"
                android:layout_height="wrap_content" android:text="@string/amount" />

			<EditText android:id="@+id/Amount" android:layout_width="fill_parent"
                android:layout_height="wrap_content" android:numeric="decimal" android:inputType="phone"
                android:hint="@string/amountHint" />
			<TextView android:text="@string/interest"
                android:layout_width="fill_parent" android:layout_height="wrap_content"/>
			<EditText android:id="@+id/Interest" android:layout_width="fill_parent"
                android:layout_height="wrap_content" android:numeric="decimal" android:inputType="phone"
                android:hint="@string/interestHint"/>

			<TextView android:id="@+id/periodLbl" android:text="@string/period"
                android:layout_width="fill_parent" android:layout_height="wrap_content"/>

			<Spinner android:id="@+id/Spinner01" android:layout_width="fill_parent"
               android:layout_height="wrap_content" android:entries="@array/periods">

			</Spinner>

			<TextView android:id="@+id/fixedPaymentLbl"
                android:text="@string/fixedPayment" android:visibility="gone"
                android:layout_width="fill_parent" android:layout_height="wrap_content"/>
			<EditText android:id="@+id/fixedPaymentText" android:layout_width="fill_parent"
                android:layout_height="wrap_content" android:visibility="gone" android:numeric="decimal"
                android:inputType="phone" />
			
			<Button android:id="@+id/Calc" android:text="@string/calc"
              android:textStyle="bold" android:layout_width="fill_parent"
              android:layout_height="wrap_content"/>

			<TextView android:text="@string/MonthlyAmountLbl" android:id="@+id/MonthlyAmountLbl"
                android:layout_width="fill_parent" android:layout_height="wrap_content"/>
			<TextView android:id="@+id/MonthlyAmount"
                android:layout_width="fill_parent" android:layout_height="wrap_content"
                android:textStyle="bold" android:text="0.0" android:gravity="right"
                android:textSize="20px" android:paddingRight="10px" android:textColor="@color/result"/>
			<TextView android:text="@string/IterestTotalLbl"
                android:layout_width="fill_parent" android:layout_height="wrap_content"/>
			<TextView android:id="@+id/IterestTotal"
                android:layout_width="fill_parent" android:layout_height="wrap_content"
                android:textStyle="bold" android:text="0.0" android:gravity="right"
                android:textSize="20px" android:paddingRight="10px" android:textColor="@color/result"/>
			<TextView android:text="@string/AmountTotalLbl"
                android:layout_width="fill_parent" android:layout_height="wrap_content"/>
			<TextView android:id="@+id/AmountTotal"
                android:layout_width="fill_parent" android:layout_height="wrap_content"
                android:textStyle="bold" android:text="0.0" android:gravity="right"
                android:textSize="20px" android:paddingRight="10px"  android:textColor="@color/result"/>
			<TextView android:text="@string/paymentsCount"
                android:layout_width="fill_parent" android:layout_height="wrap_content"/>
			<TextView android:id="@+id/PeriodTotal"
                android:layout_width="fill_parent" android:layout_height="wrap_content"
                android:textStyle="bold" android:text="0" android:gravity="right"
                android:textSize="20px" android:paddingRight="10px"  android:textColor="@color/result"/>
		
      <Button android:text="@string/schedule" android:id="@+id/ScheduleButton"  android:enabled="false"
        android:layout_width="fill_parent" android:layout_height="wrap_content"/>
</LinearLayout>
	</ScrollView>
</LinearLayout>
